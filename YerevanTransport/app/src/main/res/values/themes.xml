<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.YerevanTransport" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <item name="android:statusBarColor">@color/status_bar</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:navigationBarColor">@color/surface</item>
    </style>

    <style name="Theme.YerevanTransport.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/primary</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="postSplashScreenTheme">@style/Theme.YerevanTransport</item>
    </style>

    <!-- Search Bar Style -->
    <style name="SearchBarStyle">
        <item name="android:background">@drawable/bg_search_field</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHint">@color/text_hint</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <!-- Card Style -->
    <style name="RouteCardStyle" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">2dp</item>
        <item name="contentPadding">16dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>
</resources>
